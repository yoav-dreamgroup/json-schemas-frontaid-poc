{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Simple JSON Schema Meta-Schema for Activity",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "const": "https://json-schema.org/draft/2020-12/schema"
    },
    "$id": {
      "type": "string",
      "format": "uri"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["object"]
    },
    "required": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "properties": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["string", "integer"]
            },
            "description": {
              "type": "string"
            },
            "examples": {
              "type": "array",
              "items": {}
            },
            "minimum": {
              "type": "number"
            }
          },
          "required": ["type"]
        }
      },
      "additionalProperties": false
    },
    "additionalProperties": {
      "type": "boolean"
    }
  },
  "required": ["$schema", "title", "type", "properties"]
}
